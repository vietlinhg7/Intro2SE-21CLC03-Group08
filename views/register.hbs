<body>
  <div class="login-body">
    <div class="left-section float-start">
      <img class="brand-logo" src="./assets/img/logo_header.png" alt="">
      <div class="introduction">
        <h1>Shopbee</h1>
        <h6>Nền tảng thương mại điện tử <br> yêu thích ở Đông Nam Á &#38; Việt Nam</h6>
      </div>
    </div>
    <div class="right-section-login-board float-end bg-white m-5 rounded ">
      <div class="login-text text-center m-3">
        <h4><strong>ĐĂNG KÝ</strong></h4>
      </div>
      <form class="input m-3" action="/register" method="POST">
        <label for="hoten"></label><br>
        <input class="mx-1 w-100" type="text" id="hoten" name="hoten" placeholder="Họ tên"><br>
        <label for="username"></label><br>
        <input class="mx-1 w-100" type="username" id="username" name="username" placeholder="Tên đăng nhập"><br>
        <label for="email"></label><br>
        <input class="mx-1 w-100" type="email" id="email" name="email" placeholder="Email"><br>
        <label for="sdt"></label><br>
        <input class="mx-1 w-100" type="sdt" id="sdt" name="sdt" placeholder="Số điện thoại"><br>
        <label for="password"></label><br>
        <input class="mx-1 w-100" type="password" id="password" name="password" placeholder="Mật khẩu">
        <button class="login-button m-3 text-start rounded" type="submit">
          <h5><strong>ĐĂNG KÝ</strong></h5>

        </button>
        <h6 class="signup">Bạn đã có tài khoản? <a class="signup_link" href="/login" style="color: #F0B90B;">Đăng nhập</a>
        </h6>
      </form>
    </div>
  </div>

  <script>
    function myFunction() {
      var x = document.getElementById("password");
      if (x.type === "password") {
        x.type = "text";
      } else {
        x.type = "password";
      }
    }
  </script>
  <script>
    if ('{{errorMessage}}') {
    alert('{{errorMessage}}');
    }
  </script>
</body>
